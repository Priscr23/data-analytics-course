    "    seq=[] #queremos guardar los nÃºmeros de la secuencia hasta lleagr a 1\n",
    "    while(i>1):\n",
    "\n",
    "        if(i%2==0):#par\n",
    "            i=i/2\n",
    "            seq.append(i)\n",
    "        \n",
    "        else:#impar\n",
    "            i=3*i+1\n",
    "            seq.append(i)\n",
    "\n",
    "collatz(7)"
